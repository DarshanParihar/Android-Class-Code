			+ " TEXT NOT NULL, "
			+ COLUMN_AGE
			+ " TEXT NOT NULL, "
			+ COLUMN_LOCATION + " TEXT NOT NULL );";

	class DatabaseEngine extends SQLiteOpenHelper {
